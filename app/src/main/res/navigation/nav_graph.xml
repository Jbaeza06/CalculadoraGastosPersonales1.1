<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inicioFragment">

    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.calculadora.de_gastos.ui.home.InicioFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_inicioFragment_to_calendarioFragment"
            app:destination="@id/calendarioFragment" />
    </fragment>

    <fragment
        android:id="@+id/metasFragment"
        android:name="com.calculadora.de_gastos.ui.home.MetasFragment"
        android:label="Metas"
        tools:layout="@layout/fragment_metas" />

    <fragment
        android:id="@+id/movimientosFragment"
        android:name="com.calculadora.de_gastos.ui.home.MovimientosFragment"
        android:label="Movimientos"
        tools:layout="@layout/fragment_movimientos"><action
        android:id="@+id/action_movimientosFragment_to_eTransactionFragment"
        app:destination="@id/eTransactionFragment" />
    </fragment>


    <fragment
        android:id="@+id/perfilFragment"
        android:name="com.calculadora.de_gastos.ui.home.PerfilFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_perfil" />
    <fragment
        android:id="@+id/eTransactionFragment"
        android:name="com.calculadora.de_gastos.ui.transaction.ETransactionFragment"
        android:label="Editar Movimiento"
        tools:layout="@layout/fragment_e_transaction" />
    <fragment
        android:id="@+id/calendarioFragment"
        android:name="com.calculadora.de_gastos.ui.home.CalendarioFragment"
        android:label="Calendario"
        tools:layout="@layout/fragment_calendario" />

</navigation>